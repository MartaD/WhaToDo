<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" >
    <%= f.label :name  %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :duration %><br />
    <%= f.number_field :duration %>
  </div>

  <details open="open" >
    <summary>Informacje dodatkowe</summary>
    
    <div class="field" >
    <%= f.label :description %><br />
    <%= f.text_area :description %>
    </div>
    
    <div class="field" >
    <%= f.label :priority %><br />
    <%= f.number_field :priority %>
    </div>
    
    <div class="field" >
    <%= f.label :status %><br />
    <%= f.number_field :status %>
    </div>
    
    <div class="field" >
    <%= f.label :start_at %><br />
    <%= f.date_select :start_at %>
    </div>
    
    <div class="field" >
    <%= f.label :end_at %><br />
    <%= f.date_select :end_at %>
    </div>
  </details>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
