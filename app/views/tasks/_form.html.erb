<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" >
    <%= f.label :name, "Nazwa"  %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :duration, "Czas trwania (w godzinach)" %><br />
    <%= f.number_field :duration %>
  </div>

  <details>
    <summary>Informacje dodatkowe</summary>
    
    <div class="field" >
    <%= f.label :description, "Opis" %><br />
    <%= f.text_area :description %>
    </div>
    
    <div class="field" >
    <%= f.label :priority, "Priorytet" %><br />
    <%= f.number_field :priority %>
    </div>
    
    <div class="field" >
    <%= f.label :status, "Status zadania (1, jeżeli ma już ustalony czas; 0, jeżeli czas ma zostać przydzielony)" %><br />
    <%= f.number_field :status %>
    </div>
    
    <div class="field" >
    <%= f.label :start_at, "Początek (jeżeli status = 1)" %><br />
    <%= f.datetime_select :start_at %>
    </div>
    
  <!--  <div class="field" >
    <%#  koniec zadania ustalany automatycznie jako start+długość %>
    <%#= f.label :end_at, "Koniec (jeżeli status = 1)" %><br />
    <%#= f.datetime_select :end_at %>
    </div> -->
    
    <div class="field" >
    <%= f.label :deadline, "Deadline (jeżeli status = 0)" %><br />
    <%= f.datetime_select :deadline %>
    </div>
  </details>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
